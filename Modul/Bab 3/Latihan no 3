#include <iostream>
#include <stdlib.h>

#define N_MOVIES 5

using namespace std;

struct movie_t
{
    char title[50];
    int year;
}films [N_MOVIES];

void printmovie (movie_t movie)
{
    cout<<movie.title;
    cout<<" ("<<movie.year<<")\n";
};

int main()
{
    char buffer[50];
    int n;
    for(n=0;n<N_MOVIES;n++)
    {
        cout<<"masukkan judul film: ";
        cin.getline(films[n].title,50);
        cout<<"masukkan tahun: ";
        cin.getline(buffer,50);
        films[n].year=atoi(buffer);
    }
    cout<<"film yang menjadi favorit kamu:\n";
    for(n=0;n<N_MOVIES;n++)
    {
       printmovie(films[n]);
    }
    return 0;
}
